{
  "functions": {
    "api/**/*.ts": { "runtime": "edge", "memory": 512 }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://telegram.org; connect-src 'self' https://*.supabase.co"
        }
      ]
    }
  ]
}
